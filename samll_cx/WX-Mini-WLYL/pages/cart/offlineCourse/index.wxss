/* pages/cart/offlineCourse/index.wxss */
.courseDetail{
	width: 100%;
	height: auto;
	overflow: hidden;
}
.topCont{
	margin-bottom: 15rpx;
}
.banner{
	width: 100%;
	height: 460rpx;
  vertical-align:middle;
}
.banner image{
  width: 100%;
  height: 100%;
  display: block;
}
.courseCont{
	width: 100%;
	height: auto;
	overflow: hidden;
	padding: 20rpx 30rpx 40rpx;
	box-sizing: border-box;
	background: #fff;
}
.cLeft{
	width: 590rpx;
	height: auto;
	overflow: hidden;
}
.courseCont .title{
	width: 100%;
	display: block;
	font-size: 30rpx;
	color: #222;
	line-height: 47rpx;
}
.courseCont .intro{
	width: 100%;
	display: block;
	font-size: 24rpx;
	color: #999;
	line-height: 41rpx;
	margin-bottom: 18rpx;
}
.courseCont .labels{
	width: 100%;
	height: auto;
	overflow: hidden;
}
.labels .label{
	width: 116rpx;
	height: 42rpx;
	line-height: 42rpx;
	font-size: 22rpx;
	color: #533b3a;
	text-align: center;
	border-radius: 8rpx;
	background: #f5f5f5;
	margin-right: 10rpx;
  display: inline-block;
}
.perMes{
	width: 99rpx;
	height: auto;
	overflow: hidden;
}
.perMes image{
	width: 69rpx;
	height: 69rpx;
	margin: auto;
	display:block;
  border-radius: 50%;
}
.perMes .name{
	width: 100%;
	display: block;
	font-size: 32rpx;
	color: #20cfa0;
	line-height: 41rpx;
  text-align: center;
}
/* 内容 */
.botCont{
	width: 100%;
	height: auto;
	padding: 20rpx 30rpx 40rpx;
	box-sizing: border-box;
	overflow: hidden;
	background: #fff;
}
.topTabBar{
	width: 100%;
	height:69rpx;
	line-height:69rpx;
	background: #fff;
}
.tab{
	width: 120rpx;
	line-height:69rpx;
	text-align: center;
	font-size: 30rpx;
	color: #888;
	margin-right: 31rpx;
}
.tabAfter{
	color: #20cfa0;
}
.lLine{
	width: 32rpx;
	height: 3px;
	background: #20cfa0;
	margin: auto;
}
.WLine{
	width: 32rpx;
	height: 3px;
	background: #fff;
	margin: auto;
}
.more{
  font-size: 24rpx;
}
.more .text{
  color: #888;
}
.right_arrows{
  border-top: 5rpx solid #888;
  border-right: 5rpx solid #888;
  transform: rotate(45deg);
  display: inline-block;
  margin:28rpx 0rpx 0 0;
}
.swiper{
	width: 100%;
	height: auto;
	overflow: hidden;
}
swiper-item{
	width: 100%;
	overflow: hidden;
}
.eachCont{
	width: 100%;
	padding-top: 13rpx;
	box-sizing: border-box;
	overflow: hidden;
}

.buts{
	width: 100%;
	height: 95rpx;
	line-height: 95rpx;
	font-size: 24rpx;
	color: #20cfa0;
	text-align: center;
	display: flex;
	flex-wrap: nowrap;
	position: fixed;
	bottom: 0;
	left: 0;
}
.button{
	width: 50%;
}
.prices{
	background: #fff;
}
.price{
	font-size: 32rpx;
}
.buy{
	font-size: 32rpx;
	background: #20cfa0;
	color: #fff;
}
.hasbuy{
	font-size: 32rpx;
	background: #eee;
	color: #fff;
}