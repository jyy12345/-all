/* pages/cart/goodsDetail/index.wxss */
.courseDetail{
	width: 100%;
	height: auto;
	overflow: hidden;
}
.topCont{
	margin-bottom: 15rpx;
}
.banner{
  width: 100%;
  height: 460rpx;
}
.banner image{
  width: 100%;
  height: 100%;
}
.courseCont{
	width: 100%;
	height: auto;
	overflow: hidden;
	padding: 30rpx;
	box-sizing: border-box;
	background: #fff;
  display:flex;
  align-items:center;
}
.cLeft{
	width: 555rpx;
	height: auto;
	overflow: hidden;
}
.courseCont .title{
	width: 100%;
	display: block;
	font-size: 30rpx;
	color: #222;
	line-height: 50rpx;
}
.courseCont .intro{
	width: 100%;
	display: block;
	font-size: 24rpx;
	color: #999;
	line-height: 44rpx;
	margin-bottom: 18rpx;
}
.courseCont .price{
	/* width: 99rpx; */
	height: auto;
	overflow: hidden;
  font-size: 48rpx;
  color: #20cfa0;
  display: flex;
  align-items: center;
}
.courseCont .rmb{
  font-size: 24rpx;
}
.perMes image{
	width: 69rpx;
	height: 69rpx;
	margin: auto;
	display:block;
}
.perMes .name{
	width: 100%;
	display: block;
	font-size: 32rpx;
	color: #20cfa0;
	line-height: 41rpx;
}
/* 内容 */
.botCont{
	width: 100%;
	height: auto;
	padding: 20rpx 30rpx 40rpx;
	box-sizing: border-box;
	overflow: hidden;
	background: #fff;
  margin-bottom: 15rpx;
}
.topTabBar{
	width: 100%;
	height:69rpx;
	line-height:69rpx;
	background: #fff;
}
.tab{
	width: 120rpx;
	line-height:69rpx;
	text-align: center;
	font-size: 30rpx;
	color: #888;
	margin-right: 31rpx;
}
.tabAfter{
	color: #20cfa0;
}
.lLine{
	width: 32rpx;
	height: 3px;
	background: #20cfa0;
	margin: auto;
}
.WLine{
	width: 32rpx;
	height: 3px;
	background: #fff;
	margin: auto;
}
.more{
  font-size: 24rpx;
}
.more .text{
  color: #888;
}
.right_arrows{
  border-top: 5rpx solid #888;
  border-right: 5rpx solid #888;
  transform: rotate(45deg);
  display: inline-block;
  margin:28rpx 0rpx 0 0;
}
.swiper{
	width: 100%;
	height: auto;
	overflow: hidden;
}
swiper-item{
	width: 100%;
	overflow: hidden;
}
.eachCont{
	width: 100%;
	padding-top: 13rpx;
	box-sizing: border-box;
	overflow: hidden;
}

.buts{
	width: 100%;
	height: 95rpx;
	line-height: 95rpx;
	font-size: 24rpx;
	color: #20cfa0;
	text-align: center;
	display: flex;
	flex-wrap: nowrap;
	position: fixed;
	bottom: 0;
	left: 0;
}
.buy{
  width: 100%;
	height: 95rpx;
	line-height: 95rpx;
	text-align: center;
	position: fixed;
	bottom: 0;
	left: 0;
	font-size: 32rpx;
	background: #20cfa0;
	color: #fff;
}