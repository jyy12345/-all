/* pages/mine/addAddr/index.wxss */
/* @import "../../../lib/weui.wxss"; */
page{
	background: #fff;
}
.addAddress{
	padding: 0 30rpx;
	box-sizing: border-box;
}
.add{
	width: 100%;
	height: 110rpx;
  padding-left: 10rpx;
	border-bottom: 1px solid #e1e1e1;
	box-sizing: border-box;
	display: flex;
	justify-content: space-between;
	align-items: center;
	font-size: 30rpx;
	color: #222;
}
.choiceAddr{
  overflow: hidden;
  position: relative;
}
.city{
  display: inline-block;
  height: 109rpx;
  line-height: 109rpx;
}
.address{
  width: 500rpx;
	height: 109rpx;
	line-height: 109rpx;
  font-size: 30rpx;
  color: #222;
}
.right_arrows{
	border-top:5rpx solid #b2b2b2;
  border-right:5rpx solid #b2b2b2;
  position: absolute;
  top: 47rpx;
  right: 5rpx;
}
.add input{
	width: 73.33%;
	height: 109rpx;
	line-height: 109rpx;
  font-size: 30rpx;
  color: #222;
}
.receiver input{
	width: 77.33%;
}

/* 三级联动 */

.picker-view{
	position: fixed;
	bottom: 0px;
	width: 100%; 
	height: 500rpx;
	font-size: 30rpx;
	background: #fff;
	z-index: 999;
}


.picker-view picker-view-column view{
	font-size:26rpx;
	text-align:center;
	line-height:50px;
	height:50px !important;
}

.tool-box{
	width:100%;
	position:absolute;
	top:0;
	z-index: 9999;
	background: #fff;
	height:50px;
	line-height:50px;
}
.tool-box view{
	width:33.33%;
	float:left;
	text-align:center;
	font-size:30rpx;
	color:#000;
}

.tool-box .title{
	font-size:34rpx;
}
/* 保存 */
button{
  width: 511rpx;
  height: 83rpx;
  line-height: 83rpx;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  margin-top: 40rpx;
  background: #24cb85;
  border: none;
}