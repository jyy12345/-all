/* 擅长 */
.goodCont{
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, .5);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9;
}
.unhidden{
  display: block;
}
.hidden{
  display: none;
}
.goodCont .good{
  width: 80%;
  height: auto;
  padding: 31rpx;
  overflow: hidden;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 100;
  background: #fff;
  border-radius: 15rpx;
}
.eachGood{
  width: 100%;
  display: block;
  overflow: hidden;
  margin-bottom: 10rpx;
  font-size: 30rpx;
}
.confirme{
  width: 100%;
  height: 83rpx;
  line-height: 83rpx;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  margin-top: 70rpx;
  background: #24cb85;
  border: none;
}