/* pages/mine/addr/index.wxss */
page{
	background: #fff;
}
.address{
	width: 100%;
	padding: 0 30rpx 99rpx 30rpx;
	box-sizing: border-box;
}
.eachAddr{
	width: 100%;
	padding: 18rpx 0;
	border-bottom: 1px solid #ebebeb;
	box-sizing: border-box;
}
.perMes{
	width: 100%;
	height: 57rpx;
	line-height: 57rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.perMes text{
	font-size: 30rpx;
	color: #666;
}
.perMes image{
	width: 23rpx;
	height: 23rpx;
}
.myAddr{
	line-height: 60rpx;
	color: #222;
	font-size: 30rpx;
  overflow: hidden;
}
.default{
  font-size: 28rpx;
  color: #fb4f4f;
}
.deleteAddr{
  font-size: 28rpx;
  color: #999;
}
.addAddr{
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 99rpx;
	line-height: 99rpx;
	font-size: 30rpx;
	color: #fff;
	text-align: center;
	display: flex;
	align-items: center;
	justify-content: center;
	background: #24cb85;
}
.addAddr image{
	width: 35rpx;
	height: 35rpx;
	margin-right: 12rpx;
}