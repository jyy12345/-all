/* pages/mine/order/index.wxss */
page{
	background: #fcf0f0;
}
.order{
	width: 100%;
	overflow: hidden;
}
.topTabOrder{
	width: 100%;
	height:99rpx;
	background: #fff;
	display: flex;
	justify-content: flex-start;
	flex-wrap: nowrap;
	padding: 0 30rpx 0 10rpx;
	box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9;
}
.tab{
	line-height:96rpx;
	text-align: center;
	font-size: 30rpx;
	color: #222;
	padding: 0 20rpx;
}
.tabAfter{
	color: #20cfa0;
}
.lLine{
	width: 28rpx;
	height: 3px;
	background: #20cfa0;
	margin: auto;
}
.WLine{
	width: 28rpx;
	height: 3px;
	background: #fff;
	margin: auto;
}
.swiper{
	width: 100%;
	height: 400rpx;
	overflow: hidden;
}
swiper-item{
	width: 100%;
	overflow: hidden;
}
/* 内容 */
.eachCont{
	width: 100%;
	height: auto;
	overflow: hidden;
	padding: 38rpx 30rpx;
	background: #fff;
	box-sizing: border-box;
  margin-top: 15rpx;
}
.topCont{
	width: 100%;
  line-height: 41rpx;
	margin-bottom: 31rpx;
	overflow:hidden;
}
.topCont .label{
	width: 83rpx;
	height: 41rpx;
	line-height: 39rpx;
  text-align: center;
	font-size: 24rpx;
	border-radius: 8rpx;
	margin-right: 15rpx;
}
.l_product{
	color: #20cfa0;
	border: 1rpx solid #20cfa0;
}
.l_course{
	color: #533b3a;
	border: 1rpx solid #533b3a;
}
.topCont .mark{
	font-size: 27rpx;
	color: #050505;
}
.topCont .status{
	font-size: 27rpx;
	color: #20cfa0;
}
.topCont .s_finish{
	color: #b3b3b3;
}
.botCont{
	width: 100%;
	height: auto;
	overflow: hidden;
}
.botCont .orderTop{
	width: 100%;
	margin-bottom: 18rpx;
	overflow: hidden;
}
.orderTop image{
	width: 227rpx;
	height: 149rpx;
}
.orderTop .orderRight{
	width: 441rpx;
	height: auto;
	overflow: hidden;
}
.orderRight text{
	width: 100%;
	display: block;
}
.orderRight .title{
	font-size: 28rpx;
	color: #222;
	line-height: 37rpx;
	margin-bottom: 12rpx;
}
.orderRight .intro{
	font-size: 24rpx;
	color: #999;
	line-height: 36rpx;
	margin-bottom: 12rpx;
}
.botCont .orderBot{
	width: 100%;
	overflow: hidden;
}
.orderBot .price{
	line-height: 53rpx;
	font-size: 28rpx;
	color: #666;
}
.price .rmb{
	font-size: 28rpx;
}
.price text{
	font-size: 36rpx;
	display: inline;
}
.orderBot button{
	width: 176rpx;
	height: 53rpx;
	line-height: 53rpx;
	font-size: 24rpx;
  padding: 0;
	color: #fff;
	text-align: center;
	background: #20cfa0;
	border-radius: 26.5rpx;
}
.noCont{
  width: 100%;
  height: 100vh;
  line-height: 100vh;
  font-size: 30rpx;
  color: #999;
  text-align: center;
}