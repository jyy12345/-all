/* pages/mine/coach/index.wxss */
page{
	background: #fcf0f0;
}
.editCoachMes{
	width: 100%;
	overflow: hidden;
	border-top: 1px solid #f1f1f1;
}
.mesCont{
	width: 100%;
	height: auto;
	overflow: hidden;
	background: #fff;
	margin-top: 15rpx;
	padding: 0 30rpx;
	box-sizing: border-box;
}
.perMes{
	padding-bottom: 47rpx;
	box-sizing: border-box;
}
.headImg{
	width: 100%;
	height: 233rpx;
  text-align: center;
  display: flex;
  align-items: center;
}
.headImg image{
	width: 165rpx;
	height: 165rpx;
  margin: auto;
}
.mes{
  width: 100%;
  height:91rpx;
  line-height:90rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #e1e1e1;
  text-align: left;
}
.mes input{
  width: 82.9%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: left;
  font-size: 30rpx;
  color: #666;
}
.mes text{
  width: 82.9%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: left;
  font-size: 30rpx;
  color: #666;
  margin-left: 47rpx;
}
.coachGrade{
	padding: 40rpx 30rpx 12rpx 30rpx;
	box-sizing: border-box;
}
.coachGrade .myGrade{
	height: 55rpx;
	line-height: 55rpx;
	margin-bottom: 40rpx;
}
.myGrade .titLeft{
	width: 155rpx;
	height: 55rpx;
	line-height: 55rpx;
	font-size: 30rpx;
	color: #222;
  position: relative;
}
.myGrade .doubt{
	width: 29rpx;
	height: 21rpx;
  display: inline-block;
	line-height: 21rpx;
	font-size: 22rpx;
	color: #fff;
	text-align: center;
	background: #24cb85;
  border-radius: 6rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.myGrade .upgrade{
	width: 139rpx;
	height: 55rpx;
	font-size: 24rpx;
	color: #fff;
	text-align: center;
	background: #24cb85;
	border-radius: 10rpx;
}
.gType{
	width: 100%;
	height: 64rpx;
	line-height: 64rpx;
	margin-bottom: 36rpx;
	overflow: hidden;
}
.gType text{
	width: 129rpx;
	font-size: 30rpx;
	color: #666;
}
.gType image{
	width:64rpx;
	height: 64rpx;
	margin-left: 30rpx;
}
.good{
	padding: 10rpx 30rpx 40rpx;
	box-sizing: border-box;
}
.titlt{
	width: 100%;
	height: 89rpx;
	line-height: 89rpx;
	font-size: 30rpx;
	color: #222;
}
.good .goodCont{
	width: 100%;
	height: 89rpx;
	line-height: 89rpx;
	font-size: 30rpx;
	color: #666;
	border: 1px solid #d6d6d6;
	box-sizing: border-box;
	display: flex;
	justify-content: flex-start;
}
.goodCont text{
	display: inline;
	padding: 0 23rpx;
}
.coachPic{
	width: 100%;
	padding: 10rpx 30rpx 40rpx;
	box-sizing: border-box;
}
.coachPic .pics{
	width: 100%;
	height: 170rpx;
	overflow: hidden;
	display: flex;
	flex-wrap: nowrap;
	justify-content: space-around;
}
.pics image{
  width: 225rpx;
	height: 170rpx;
}
.coachIntro{
	width: 100%;
	padding: 10rpx 30rpx 40rpx;
	box-sizing: border-box;
}
.coachIntro textarea{
	width: 100%;
	height: 227rpx;
	line-height: 60rpx;
	border: 1px solid #d6d6d6;
	font-size: 30rpx;
	color: #666;
	padding: 0 10rpx;
	box-sizing: border-box;
}


button{
  width: 511rpx;
  height: 83rpx;
  line-height: 83rpx;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  margin-top: 40rpx;
  margin-bottom: 47rpx;
  background: #24cb85;
  border: none;
}


/* 弹框 */
.goodContsFrame{
	width: 100%;
	height: 100%;
	position: fixed;
	background: rgba(0, 0, 0, 0.6);
  top:0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 2;
}
.goodContsFrame .goodConts{
	width: 90%;
	padding-bottom: 15rpx;
	box-sizing: border-box;
	background: #fff;
	display: flex;
  justify-content: start;
  flex-wrap: wrap;
}
.goodConts .tips{
  width: 100%;
  height: 89rpx;
	line-height: 89rpx;
	font-size: 30rpx;
	color: #222;
  text-align: center;
}
.goodConts text{
  width: 25%;
	display: inline;
	padding: 15rpx 23rpx;
	font-size: 30rpx;
	color: 666;
  text-align: center;
}