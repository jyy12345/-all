/* pages/mine/register/common.wxss */
page{
	background: #FFF;
}
.userMes{
	width: 100%;
	height: auto;
	overflow: hidden;
	padding: 0 30rpx;
	box-sizing: border-box;
}
.mes{
	width: 100%;
	height:91rpx;
	line-height:90rpx;
	font-size: 30rpx;
	border-bottom: 1px solid #e1e1e1;
	text-align: left;
}
.mes input,.chooseSex{
	width: 82.9%;
	height: 90rpx;
	line-height: 90rpx;
	text-align: left;
	font-size: 30rpx;
	color: #666;
}
.tel .phonenumber{
  height: 100%;
  color: #666;
}
.tel .getphoneNum{
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  margin: 15rpx 0;
  background: #24cb85;
  overflow: hidden;
}
.default{
  width: 511rpx;
  height: 83rpx;
  line-height: 83rpx;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  margin-top: 60rpx;
  background: #24cb85;
  border: none;
}
.tips{
	width: 100%;
	display: block;
	text-align: center;
	margin-top: 24rpx;
	font-size: 24rpx;
	color: #888;
}
.agreement{
	width: 100%;
	display: block;
	text-align: center;
	margin-top: 12rpx;
	font-size: 24rpx;
	color: #24cb85;
}