/* pages/smiling/skill/index.wxss */
page{
	background: #fff;
}
.skill{
	width: 100%;
	overflow: hidden;
}
/* nav */
.navs{
	width: 100%;
	height:99rpx;
	background: #fff;
	display: flex;
	justify-content: flex-start;
	flex-wrap: nowrap;
	padding: 0 30rpx 0 10rpx;
	box-sizing: border-box;
}
.navs .nav{
	line-height:96rpx;
	text-align: center;
	font-size: 30rpx;
	color: #222;
	padding: 0 20rpx;
}
.navs .navColor{
  color: #20cfa0;
}
.lLine{
	width: 28rpx;
	height: 3px;
	background: #20cfa0;
	margin: auto;
}
.WLine{
	width: 28rpx;
	height: 3px;
	background: #fff;
	margin: auto;
}
/* tabbar */
.topTabBar{
	width: 100%;
	/* height:65rpx; */
	line-height:51rpx;
	background: #fff;
	/* display: flex; */
	/* justify-content: flex-start; */
	flex-wrap: nowrap;
	padding: 0 30rpx 0 10rpx;
	box-sizing: border-box;
  margin:10px 0 10rpx 0;
}
.tab{
  /* width: 159rpx; */
	height:51rpx;
	line-height:51rpx;
	text-align: center;
	font-size: 24rpx;
	color: #888;
  background: #f4f4f4;
  border-radius: 25.5rpx;
  margin-right: 20rpx;
  float: left;
  padding: 0 20rpx;
  margin-top: 10rpx;
}
.tabAfter{
	color: #fff;
  background: #20cfa0;
}
.swiper{
	width: 100%;
	height: 400rpx;
	overflow: hidden;
}
swiper-item{
	width: 100%;
	overflow: hidden;
}
/* 内容 */
/* 专业水平文字 */
.healthCont{
  padding: 0 30rpx 30rpx;
  box-sizing: border-box;
  /* overflow: hidden; */
}
.eachHealMes{
  padding: 30rpx 0;
  border-bottom: 1px solid #ececec;
}
.eachHealMes image{
  width:290rpx;
  height:173rpx;
  border-radius:10rpx;
}
.healthMesCont{
  width: 376rpx;
  margin: 8rpx 0 28rpx 23rpx;
}
.eachHealMes .healthMes1{
  line-height: 48rpx;
  font-size: 30rpx;
  color: #222;
}
.eachHealMes .healthMes{
  display: block;
  line-height: 48rpx;
  font-size: 30rpx;
  color: #222;
  margin: 8rpx 0 28rpx 0rpx;
}
.eachHealMes .time1{
  width: 100%;
  display: block;
  font-size: 24rpx;
  color: #9b9b9b;
  margin-top: 28rpx;
}
.eachHealMes .time{
  width: 100%;
  display: block;
  font-size: 24rpx;
  color: #9b9b9b;
}