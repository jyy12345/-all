/* pages/smiling/doctorDetail/index.wxss */
.coachDetail{
	width: 100%;
	height: auto;
	overflow: hidden;
}
/* 介绍 */
.coachMes{
  width: 100%;
  height: auto;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  overflow: hidden;
  background: #fff;
  margin-bottom: 15rpx;
}
.coachMes image{
  width: 303rpx;
  height: 359rpx;
  border-radius: 10rpx;
}
.coachMes .permes{
  width: 382rpx;
  height: 359rpx;
}
.mes{
  margin-bottom: 18rpx;
}
.permes .name{
  width: 100%;
  height: 62rpx;
  line-height: 62rpx;
  font-size: 36rpx;
  color: #20cfa0;
}
.permes .jobs{
  width: 100%;
  height: auto;
  /* display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap:wrap; */
}
.oneJob{
  height: auto;
  display: flex;
  align-items: center;
  overflow: hidden;
  /* flex-wrap: pre-wrap; */
}
.circle{
  width: 5px;
  height:5px;
  margin-right: 13rpx;
  background: #594544;
  border-radius: 50%;
  display: inline-block;
}
.oneJob .intro{
  line-height: 48rpx;
  font-size: 24rpx;
  color: #666;
  overflow: hidden;
  display: inline-block;
}
.mesCont{
  width: 100%;
  height: auto;
  background: #fff;
  overflow: hidden;
  margin-bottom: 15rpx;
  padding: 22rpx 30rpx 30rpx;
  box-sizing: border-box;
}
.mesCont .title{
  width: 100%;
  height: 67rpx;
  line-height: 67rpx;
  font-size: 30rpx;
  color: #151515;
  font-weight: bold;
}
.mesCont .conts{
  width: 100%;
  line-height: 45rpx;
  font-size: 24rpx;
  color: #666;
}
.course{
	width: 100%;
	height: auto;
	overflow: hidden;
	padding: 10rpx 30rpx 40rpx;
	box-sizing: border-box;
	background: #fff;
}
.contTop{
  width: 100%;
  height: 89rpx;
  line-height: 89rpx;
}
.titleLeft{
  display: inline;
}
.titleLeft .tit{
  font-size: 30rpx;
  color: #151515;
  float: left;
  font-weight: bold;
}
.more{
  font-size: 24rpx;
}
.more .text{
  color: #888;
}
.right_arrows{
  width: 15rpx;
  height: 15rpx;
  border-top: 5rpx solid #888;
  border-right: 5rpx solid #888;
  transform: rotate(45deg);
  display: inline-block;
  margin:36rpx 0rpx 0 0;
}
.contBot{
	width: 100%;
	height: auto;
	display: flex;
	justify-content: space-between;
	flex-wrap: wrap;
	overflow: hidden;
}
.contBot .eachCourse{
	width: 334rpx;
	height: 186rpx;
	background: #20cfa0;
	border-radius: 10rpx;
  margin-bottom: 15rpx;
}
.eachCourse image{
	width: 48rpx;
	height: 58rpx;
	display: block;
	margin: auto; 
	margin-top: 44rpx;
}
.eachCourse text{
	width: 100%;
	height: 67rpx;
	line-height: 67rpx;
	text-align: center;
	font-size: 24rpx; 
	color: #fff;
  display: block;
}