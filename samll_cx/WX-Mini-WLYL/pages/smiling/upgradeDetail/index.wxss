/* pages/smiling/upgradeDetail/index.wxss */
.details{
	width: 100%;
	height: auto;
	overflow: hidden;  
}
.detailCont{
	width: 100%;
	padding: 56rpx 30rpx;
	box-sizing: border-box;
	margin-bottom: 15rpx;
	background: #fff;
}
.detailCont .title{
  font-size: 34rpx;
  line-height:48rpx;
  color: #222;
}
.detailCont .time{
  font-size: 28rpx;
  color: #9b9b9b;
  line-height:80rpx;
}
.detailCont .words{
  font-size: 24rpx;
  color: #666;
}
.words img{
  width: 100%;
  height: 410rpx;
}
.course{
	width: 100%;
	height: auto;
	overflow: hidden;
	padding: 10rpx 30rpx 40rpx;
	box-sizing: border-box;
	background: #fff;
}
.contTop{
  width: 100%;
  height: 89rpx;
  line-height: 89rpx;
}
.titleLeft{
  display: inline;
}
.titleLeft .tit{
  font-size: 30rpx;
  color: #151515;
  float: left;
  font-weight: bold;
}
.more{
  font-size: 24rpx;
}
.more .text{
  color: #888;
}
.right_arrows{
  width: 15rpx;
  height: 15rpx;
  border-top: 5rpx solid #888;
  border-right: 5rpx solid #888;
  transform: rotate(45deg);
  display: inline-block;
  margin:39rpx 0rpx 0 0;
}
.contBot{
	width: 100%;
	height: auto;
	display: flex;
	justify-content: space-between;
	flex-wrap: wrap;
	overflow: hidden;
}
.contBot .eachCourse{
	width: 334rpx;
	height: 186rpx;
	background: #20cfa0;
	border-radius: 10rpx;
  margin-bottom: 15rpx;
}
.eachCourse image{
	width: 48rpx;
	height: 58rpx;
	display: block;
	margin: auto; 
	margin-top: 44rpx;
}
.eachCourse text{
	width: 100%;
	height: 67rpx;
	line-height: 67rpx;
	text-align: center;
	font-size: 24rpx; 
	color: #fff;
  display: block;
}