  font-size: 28rpx;
  border-bottom: 1px solid #e1e1e1;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
  overflow: hidden;
}
.cont text{
  color: #222;
}
.cont input{
  width: 534rpx;
