/* pages/health/yuyueCoach/index.wxss */
page{
  background: #fff;
}
.yuyue{
  width: 100%;
  height: auto;
  overflow: hidden;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.time,.addr{
  width: 100%;
  height: 110rpx;
  line-height: 109rpx;
  border-bottom: 1px solid #e1e1e1;
  box-sizing: border-box;
}
.picker text{
  height: 109rpx;
  line-height: 109rpx;
  font-size: 28rpx;
  color: #666;
  display: inline-block;
  margin-left: 35rpx;
}
.picker{
  width: 545rpx;
  height: 110rpx;
  line-height: 109rpx;
  display: inline-block;
  color: #222;
  font-size: 28rpx;
}
.time image{
  width: 34rpx;
  height: 34rpx;
  display: inline-block;
  margin-top: 48rpx;
}
.right_arrows{
  margin-top: 47.5rpx;
}
/* 预约内容 */
.cont,.remark{
  width: 100%;
  height: 110rpx;
