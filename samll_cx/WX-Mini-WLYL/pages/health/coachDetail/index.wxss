/* pages/health/coachDetail/index.wxss */
.coachDetail{
	width: 100%;
	height: auto;
	overflow: hidden;
}
/* 介绍 */
.coachMes{
  width: 100%;
  height: auto;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  overflow: hidden;
  background: #fff;
  margin-bottom: 28rpx;
}
.coachMes image{
  width: 303rpx;
  height: 359rpx;
  border-radius: 10rpx;
}
.coachMes .permes{
  width: 350rpx;
  height: 359rpx;
}
.mes{
  margin-bottom: 18rpx;
}
.permes .name{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 36rpx;
  color: #222;
}
.permes .goods,.permes .intros{
  width: 100%;
  font-size: 24rpx;
  color: #222;
  line-height: 43rpx;
}
.goods text,.permes text{
  width: 100%;
  display: block;
  font-size: 24rpx;
  color: #666;
}
.mesCont{
  margin-bottom: 15rpx;
}
/* 星级 */
.coachGrade{
	padding: 40rpx 30rpx 12rpx 30rpx;
	box-sizing: border-box;
  overflow: hidden;
  background: #fff;
}
.coachGrade .myGrade{
	height: 55rpx;
	line-height: 55rpx;
	margin-bottom: 40rpx;
}
.myGrade .titLeft{
	width: 155rpx;
	height: 55rpx;
	line-height: 55rpx;
	font-size: 30rpx;
	color: #222;
  position: relative;
}
.myGrade .doubt{
	width: 29rpx;
	height: 21rpx;
  display: inline-block;
	line-height: 21rpx;
	font-size: 22rpx;
	color: #fff;
	text-align: center;
	background: #24cb85;
  border-radius: 6rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.gType{
	width: 100%;
	height: 64rpx;
	line-height: 64rpx;
	margin-bottom: 36rpx;
	overflow: hidden;
}
.gType text{
	width: 129rpx;
	font-size: 30rpx;
	color: #666;
}
.gType image{
	width:64rpx;
	height: 64rpx;
	margin-left: 30rpx;
}
/* 图片 */
.coachPic{
	width: 100%;
	padding: 10rpx 30rpx 40rpx;
	box-sizing: border-box;
  overflow: hidden;
  background: #fff;
}
.title{
	width: 100%;
	height: 89rpx;
	line-height: 89rpx;
	font-size: 30rpx;
	color: #222;
}
.coachPic .pics{
	width: 100%;
	height: 170rpx;
	overflow: hidden;
	display: flex;
	flex-wrap: nowrap;
	justify-content: space-around;
}
.pics image{
  width: 225rpx;
	height: 170rpx;
}

button{
  width: 511rpx;
  height: 83rpx;
  line-height: 83rpx;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  margin: 40rpx auto;
  background: #24cb85;
  border: none;
}