/* pages/health/index.wxss */
.smiling{
	width: 100%;
	overflow: hidden;
}
.topTab{
	width: 100%;
  white-space: nowrap;
	height:104rpx;
	background: #fff;
	display: flex;
	justify-content: flex-start;
	flex-wrap: nowrap;
	padding: 0 30rpx 0 10rpx;
  border-bottom: 1rpx solid #ececec;
	box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2;
}
.tab{
  position: relative;
  display: inline-block;
  overflow: hidden;
	line-height:96rpx;
	text-align: center;
	font-size: 30rpx;
	color: #222;
	padding: 0 20rpx;
}
.tabAfter{
	color: #20cfa0;
}
.lLine{
	width: 28rpx;
	height: 3px;
	background: #20cfa0;
	margin: auto;
}
.wLine{
	width: 28rpx;
	height: 3px;
	background: #fff;
	margin: auto;
}
.botConts{
	width: 100%;
	height: auto;
	overflow: hidden;
  margin-top: 99rpx;
}
.eachList{
	width: 100%;
	overflow: hidden;
}
/* 内容 */
/* 医师风采列表 */
.doctorList{
	padding:24rpx 30rpx 0;
	box-sizing: border-box;
	overflow: hidden;
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
}
.eachDoctor{
	width: 335rpx;
	height: 440rpx;
	position: relative;
	border-radius: 10rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}
.eachDoctor image{
	width: 100%;
	height: 100%;
  border-radius:10rpx;
}
.eachDoctor .name{
	width: 100%;
	height: 61rpx;
	line-height: 61rpx;
	font-size: 30rpx;
	color: #222;
	text-align: center;
	position: absolute;
	bottom: 0;
	left: 0;
	background: #fff;
	border-radius: 9rpx;
}
/* 技术评定 */
.skillCont{
	width: 100%;
	padding-top: 14rpx;
	box-sizing: border-box;
	overflow: hidden;
}
.eachskillCont{
	width: 100%;
	height: 345rpx;
	position: relative;
	margin-bottom: 20rpx;
	overflow: hidden;
}
.eachskillCont image{
	width: 100%;
	height: 100%;
}
.skillName{
	width: 218rpx;
	height: 218rpx;
	background: rgba(32,207,160,0.8);
	border-radius: 50%;
	position: absolute;
	top: 50%;
	left: 50%;
	margin-top: -109rpx;
	margin-left: -109rpx;
}
.skillName image{
	width: 66rpx;
	height: 68rpx;
  display: block;
  margin: 51rpx auto 0;
}
.skillName .title{
	width: 100%;
	display: block;
	font-size: 32rpx;
	color: #fff;
	line-height: 63rpx;
	text-align: center;
}
/* 升级必备 */
.healthCont{
  padding: 0 30rpx 0rpx;
  box-sizing: border-box;
  overflow: hidden;
  background: #fff;
}
.eachHealMes{
  padding: 30rpx 0;
  border-bottom: 1px solid #ececec;
}
.eachHealMes image{
  width:290rpx;
  height:173rpx;
  border-radius:10rpx;
}
.healthMesCont{
  width: 376rpx;
  margin: 8rpx 0 0rpx 23rpx;
}
.eachHealMes .healthMes1{
  line-height: 48rpx;
  font-size: 30rpx;
  color: #222;
}
.eachHealMes .healthMes{
  display: block;
  line-height: 48rpx;
  font-size: 30rpx;
  color: #222;
  margin: 8rpx 0 28rpx 0rpx;
}
.eachHealMes .time1{
  width: 100%;
  display: block;
  font-size: 24rpx;
  color: #9b9b9b;
  margin-top: 28rpx;
}
.eachHealMes .time{
  width: 100%;
  display: block;
  font-size: 24rpx;
  color: #9b9b9b;
}