/* pages/search/index.wxss */
page{
  background: #fff;
}
.top{
  width: 100%;
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9;
  background: #fff;
}
.searchFrame{
  width: 577rpx;
  height: 64rpx;
  float: left;
  margin-right: 10rpx;
  border-radius: 10rpx;
  background: #f5f5f5;
}
.searchFrame image{
  width: 32rpx;
  height: 32rpx;
  margin: 15rpx 15rpx auto 26rpx;
}
.searchFrame input{
 height: 64rpx;
 line-height: 64rpx;
 font-size: 22rpx;
 color: #222;
 width: 82%;
}
.top text{
  font-size: 36rpx;
  color: #20cfa0;
}
/* 搜索内容 */
.botConts{
	width: 100%;
	height: auto;
	overflow: hidden;
  margin-top: 163rpx;
}
.eachList{
	width: 100%;
  padding: 0 30rpx;
	overflow: hidden;
  box-sizing: border-box;
}
.topTabBar{
	width: 100%;
	height:99rpx;
	background: #fff;
	display: flex;
	justify-content: flex-start;
	flex-wrap: nowrap;
	padding: 0 30rpx 0 10rpx;
	box-sizing: border-box;
  position: fixed;
  top: 64rpx;
  left: 0;
  z-index: 9;
}
.tab{
	line-height:96rpx;
	text-align: center;
	font-size: 30rpx;
	color: #222;
	padding: 0 20rpx;
}
.tabAfter{
	color: #20cfa0;
}
.lLine{
	width: 28rpx;
	height: 3px;
	background: #20cfa0;
	margin: auto;
}
.WLine{
	width: 28rpx;
	height: 3px;
	background: #fff;
	margin: auto;
}
.swiper{
	width: 100%;
	height: 400rpx;
  padding: 0rpx 30rpx;
	box-sizing: border-box;
	overflow: hidden;
  position: fixed;
  top: 163rpx;
  left: 0;
}
swiper-item{
	width: 100%;
	overflow: hidden;
}
/* 全部 */
/* 文章 */
.healthCont{
  box-sizing: border-box;
  overflow: hidden;
  background: #fff;
}
.hidden{
  display: none;
}
.unhidden{
  display: block;
}
.eachHealMes{
  padding: 30rpx 0;
  border-bottom: 1px solid #ececec;
}
.eachHealMes image{
  width:290rpx;
  height:173rpx;
  border-radius:10rpx;
}
.healthMesCont{
  width: 376rpx;
  margin: 8rpx 0 0rpx 23rpx;
}
.eachHealMes .healthMes1{
  line-height: 48rpx;
  font-size: 30rpx;
  color: #222;
}
.eachHealMes .healthMes{
  display: block;
  line-height: 48rpx;
  font-size: 30rpx;
  color: #222;
  margin: 8rpx 0 28rpx 0rpx;
}
.eachHealMes .time1{
  width: 100%;
  display: block;
  font-size: 24rpx;
  color: #9b9b9b;
  margin-top: 28rpx;
}
.eachHealMes .time{
  width: 100%;
  display: block;
  font-size: 24rpx;
  color: #9b9b9b;
}
/* 课程 */
.eachCont{
	width: 100%;
	height: auto;
	overflow: hidden;
	padding: 38rpx 0rpx;
	background: #fff;
	box-sizing: border-box;
}
.contLeft{
	width: 310rpx;
	margin-right: 22rpx;
  padding-top: 8rpx;
  box-sizing: border-box;
}
.contLeft .article{
	width: 100%;
	overflow: hidden;
}
.article .title{
  line-height:48rpx;
  font-size:30rpx;
  color:#222;
}
.article .intros{
  width:100%;
  display:block;
  font-size:24rpx;
  color:#9b9b9b;
  margin-top:14rpx;
  margin-bottom:14rpx;
}
.contLeft .perMes{
	height: 56rpx;
	line-height: 56rpx;
	font-size: 28rpx;
	color: #20cfa0;
}
.perMes image{
	width: 40rpx;
	height: 40rpx;
  border-radius: 50%;
	margin-top: 8rpx;
	margin-right: 10rpx;
}
.perMes .name{
  height: 56rpx;
  line-height: 56rpx;
	font-size: 28rpx;
	color: #20cfa0;
  display: inline-block;
}
.contRight{
	width: 346rpx;
  height: 226rpx;
  position: relative;
}
.contRight .coursepic{
	width: 100%;
	height: 100%;
  border-radius: 10rpx;
}
.contRight .coursetype{
	width: 50rpx;
	height: 50rpx;
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
}
/* 医师 */
.doctorList{
	padding:24rpx 0rpx 0;
	box-sizing: border-box;
	overflow: hidden;
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
}
.eachDoctor{
	width: 335rpx;
	height: 440rpx;
	position: relative;
	border-radius: 10rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}
.eachDoctor image{
	width: 100%;
	height: 100%;
  border-radius: 13rpx;
}
.eachDoctor .name{
	width: 100%;
	height: 61rpx;
	line-height: 61rpx;
	font-size: 30rpx;
	color: #222;
	text-align: center;
	position: absolute;
	bottom: 0;
	left: 0;
	background: #fff;
	border-radius: 9rpx;
}
.noCont{
  width: 100%;
  font-size: 28rpx;
  color: #999;
  text-align: center;
  margin-top: 200rpx;
}