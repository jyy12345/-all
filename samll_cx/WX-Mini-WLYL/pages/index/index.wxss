  color: #9b9b9b;
}
/* 美容养生 */
.beautyCont{
  padding: 0 30rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.eachBeautyMes{
  width: 337rpx;
}
.eachBeautyMes:nth-child(even){
  margin-left: 16rpx;
}
.eachBeautyMes image{
  width: 100%;
  height: 200rpx;
}
.beautyMesBot{
  width: 100%;
  height: 58rpx;
  line-height: 58rpx;
}
.beautyMesBot .tit{
  font-size: 24rpx;
  color: #222;
}
.price{
  font-size: 30rpx;
  color: #20cfa0;
  font-weight: bold;
  display: inline;
}
.price .rmb{
  font-size: 20rpx;
  color: #20cfa0;
}