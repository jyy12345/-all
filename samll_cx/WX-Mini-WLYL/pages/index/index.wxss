  margin: 8rpx 0 28rpx 0rpx;
}
.eachHealMes .time1{
  width: 100%;
  display: block;
  font-size: 24rpx;
  color: #9b9b9b;
  margin-top: 28rpx;
}
.eachHealMes .time{
  width: 100%;
  display: block;
