/**app.wxss**/
page{
  width: 100%;
	height: 100%;
  background: #fcf0f0;
}
/* 清楚浮动 */
.clearfix:after{display: block; clear: both; visibility: hidden; height: 0; overflow: hidden; content: "."; }
.fl{
	float:left;
}
.fr{
	float:right;
}
.bottom{
  width: 100%;
  height: 95px;
}
.boxShadow{
  -moz-box-shadow:0 0 1rpx #a2a2a2;
  -webkit-box-shadow:0 0 1rpx #a2a2a2;
  box-shadow:0 0 1rpx #a2a2a2;
}
.right_arrows{
  width:15rpx;
  height:15rpx;
  border-top:5rpx solid #b2b2b2;
  border-right:5rpx solid #b2b2b2;
  transform:rotate(45deg);
  display:inline-block;
}
.borderTop{
  border-top: 1px solid #f1f1f1;
}
.botBtn{
  position:fixed;
  bottom:0;
  left:0;
  width:100%;
  height:99rpx;
  line-height:99rpx;
  font-size:30rpx;
  color:#fff;
  text-align:center;
  display:flex;
  align-items:center;
  justify-content:center;
  background:#24cb85;
}
rich-text{
  font-size: 29rpx !important;
}