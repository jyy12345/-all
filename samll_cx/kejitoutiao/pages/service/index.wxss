page{
  background: #f8f8f8;
}
.information{
  width:100%;
  height: 260rpx;
  overflow: hidden;
  box-shadow: 0px 0px 3px #eecccc;
  margin-top: 18rpx;
  background: #fff;
}
.infCen{
  width: 94%;
  margin:35rpx 3%;
  height:190rpx;
}
.infCenLeft{
  width: 35%;
  height: 100%;
  float: left;
}
.infCenLeft image{
  width: 100%;
  height: 100%;
}
.infCenRight{
  float: left;
  width: 63%;
  height: 100%;
  margin-left: 2%;
}
.infCenRightTop{
  width: 100%;
  height: 60%;
  color: #222222;
  font-size: 35rpx;
  line-height: 60rpx;
  margin-top: -10rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}
.infCenRightBot{
  width: 100%;
  height: 20%;
  margin-top: 53rpx;
  font-size: 30rpx;
}
.infCenRightBot text:nth-child(1){
  color: #0081d2;
}
.infCenRightBot text:nth-child(2){
  margin-left:20rpx;
  color: #a6a6a6;
}