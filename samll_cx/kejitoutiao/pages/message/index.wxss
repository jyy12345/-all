
.swiper{
  position: relative
}
.wrap{
  width: 100%;
  height: auto;
  position: relative;
}
.wrap .banerbot{
  display: block;
  position: absolute;
  bottom:0;
  width: 100%;
  height: 253rpx;
}
.wrap text{
  display: block;
  position: absolute;
  width: 96%;
  left:2%;
  right:0;
  bottom:45rpx;
  margin:0 auto;
  color: #fff;
  font-size: 30rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  text-align: center;
}
.swiper{
  width: 100%;
  height: 350rpx;
}
.swiper image{
  width: 100%;
  height: 350rpx;
}
.swiper .wx-swiper-dot:first-child{
  margin-left: 660rpx;
}
.swiper .wx-swiper-dot{
    width:6rpx;
    height: 12rpx;
    border-radius: 4rpx; 
    margin-left:-4rpx;
}
.swiper .wx-swiper-dot-active{
    height: 18rpx;
}
.infor{
  width: 47.5%;
  /* height: 400rpx; */
  float: left;
  border-radius: 8rpx;
  margin-top: 13rpx;
  overflow: hidden;
  box-shadow: 0px 0px 3px #eecccc;
  position: relative;
}
.infor:nth-of-type(odd){
  margin-left:1%;
}
.infor:nth-of-type(even){
  margin-left:2%;
}
.inforTop{
  width: 100%;
  height: 200rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.inforTop image{
  width: 100%;
  height: 200rpx;
}
.inforBot{
  width: 100%;
  /* height: 200rpx; */
  overflow: hidden;
}
.inforBot text{
  display: block;
  width: 92%;
  /* height: 160rpx; */
  margin:20rpx auto;
  font-size: 33rpx;
  /* line-height: 50rpx; */
  color:#222222;
  padding-bottom: 10rpx;
}
.jingxuan{
  width: 80rpx;
  height:40rpx;
  background:red;
  position: absolute;
  left:0;
  top:0;
  border-radius: 8rpx;
  text-align: center;
  line-height: 40rpx;
  color:#fff;
  font-size: 25rpx;
}
navigator:nth-child(n+6) .infor .jingxuan{
  display: none;
}