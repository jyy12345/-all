<view>
   <view class="register">
      <view class="register_child auto">
          <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}" >
            <view class="clearFlo pd_inp">
                <view class="flL">图书馆</view>
                <view class="picker flL">
                  <input type="text" value="{{array[index]}}" placeholder="请选择图书馆"></input>
                </view>
                <view class="icon iconfont icon-arrowRight flR jt_cs" style="font-size:40rpx;"></view>
            </view>
        
          </picker>
          <view class="clearFlo pd_inp">
                <view class="flL">手机号</view>
                <view class="picker flL">
                  <input type="text"  placeholder="请输入手机号"></input>
                </view>
          </view>
           <view class="clearFlo pd_inp">
                <view class="flL">验证码</view>
                <view class="picker flL" style="width: 50%;">
                  <input type="text"  placeholder="请输入验证码"></input>
                </view>
                <view class="flR code" >获取验证码</view>
          </view>
          <view class="clearFlo pd_inp">
                <view class="flL">设置密码</view>
                <view class="picker flL">
                  <input type="text"  placeholder="请输入密码"></input>
                </view>
          </view>
          <view class="clearFlo pd_inp">
                <view class="flL">确认密码</view>
                <view class="picker flL">
                  <input type="text" placeholder="请输入密码"></input>
                </view>
          </view>
      </view>
   </view>
   <view class="regi_btn">立即注册</view>
</view>