.headers{width: 100%;background-color:#E4A4A4; padding: 34rpx 0 30rpx 0;}
.headerTime{text-align: center;font-size: 30rpx;color: #fff;}
.codeTit{color: #fff;font-size: 30rpx;margin: 40rpx 0 0 53rpx;}
.select_box{
  color:black;
  background: #fff;
  width: 163rpx;
  position: relative;
  border-radius: 10rpx;
  margin: 30rpx 0 0 30rpx;
}
.select{
  box-sizing: border-box;
  width: 100%;
  height: 70rpx;
  /* border:1px solid #efefef; */
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.select_text{
  font-size: 30rpx;
  line-height: 57rpx;
  flex: 1;
}
.select_img{
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg); 
}
.option_box{
  position: absolute;
  top: 75rpx;
  width: 100%;
  /* border:1px solid #efefef; */
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;  
  border-radius: 10rpx;
  transition: height 0.3s;
}
.option{
  display: block;
  line-height:57rpx;
  font-size: 30rpx;
  /* border-bottom: 1px solid #efefef; */
  padding: 10rpx;
}
